<Page
    x:Class="Pseudo3DToolkit.SampleApp.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Pseudo3DToolkit.SampleApp"
    xmlns:pseudo="using:Pseudo3DToolkit.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <pseudo:SkyboxControl
            Name="MySkybox"
            AutoRotate="True"
            ShowNavigationControls="True">
            <Grid 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center">

                <Grid Background="Blue" Height="200" Width="200">
                    <TextBlock Foreground="White">Hello World!</TextBlock>
                </Grid>
            </Grid>
        </pseudo:SkyboxControl>

        <Button HorizontalAlignment="Right" VerticalAlignment="Bottom" Click="Button_Click">
            Click me
        </Button>
    </Grid>
</Page>
